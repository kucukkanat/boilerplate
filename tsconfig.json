{
  "compilerOptions": {
      "outDir": "./dist/",
      "sourceMap": true,
      "strict": true,
      "allowSyntheticDefaultImports": true,
      "noImplicitReturns": true,
      "noImplicitAny": true,
      "module": "esnext", // Support Dynamic Imports and other ESNext features
      "moduleResolution": "node", // Node module resolution for npm packages
      "target": "es5",
      "allowJs": true,
      "jsx": "react",
      "lib": ["es2015", "dom"] // Types for libraries
  },
  "include": [
      "./src/**/*"
  ]
}